package com.orthofx;

import java.util.*;

public class RepeatingSequence {

	static String substringEval(String str) {
		int k = 0,i=0;
		String val = "";
		while(i<str.length()) {
			char ch = str.charAt(i);
			if(Character.isLetter(ch)) {
				val = val+ ch;
			}
			else if(Character.isDigit(ch)) {
				k = k*10+Integer.valueOf(Integer.parseInt(""+ch));
			}
			else if(ch==']') {
				break;
			}
			else if(ch=='[') {
				String sub = substringEval(str);
				while(k>0) {
					val=val+sub;
					k--;
				}
			}
		}
		return val;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String str, sub = "", x="",exp="";
		int k=1,start=0,end = 0,count=0,m=1,st=0,e=0;

		Scanner s = new Scanner(System.in);
		System.out.println("Enter String: ");
		str = s.nextLine();
		
		exp = substringEval(str);
		System.out.println(exp);
	}
}
